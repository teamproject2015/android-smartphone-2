<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_listHeight"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/Navigation_iconmargins"
        android:layout_marginRight="@dimen/Navigation_iconmargins"
        android:src="@drawable/ic_school_black_24dp" />

    <TextView
        android:id="@+id/textView_rowName"
        android:layout_marginLeft="72dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Dummy Text" />

</RelativeLayout>